<% if user_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, class:"form-inline" do |f| %>
    <p class="form-group mr-2">
      <%= f.text_field :word, class: "form-control"%>
    </p>
    <p class="form-group mr-2">
      <%= f.select :range, options_for_select([['User'], ['Book']]), class: "form-control "%>
    </p>
    <p class="form-group mr-2">
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"], ["部分一致","partial_match"]]), class: "form-control"%>
    </p>
    <p class="form-group mr-5">
      <%= f.submit "検索", class: "btn btn-primary"%>
    </p>
  <% end %>
<% end %>