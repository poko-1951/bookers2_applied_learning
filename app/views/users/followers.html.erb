<h2>Follower Users</h2>
<% if current_user.followers.count == 0 %>
<p>ユーザーはいません</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
        <td><%= user.name %></td>
        <td>フォロー数:<%= user.following.count %></td>
        <td>フォロワー数:<%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      <% end %>
    </tbody>
  </table>
<% end %>