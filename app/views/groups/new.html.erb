<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>Create Group</h2>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label :name, "グループ名" %>
          <%= f.text_field :name, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :group_image, "グループ画像" %>
          <%= f.file_field :group_image, class:"form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class:"btn btn-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>